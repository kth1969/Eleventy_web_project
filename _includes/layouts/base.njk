<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
     <link rel="stylesheet" href="{{ '/css/Stylesheet.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ title }}">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> 
     

   

 <script>
    $(document).on("click", ".toggleVisibilitybold", function() {
    $('.bold').toggleClass('hide');
});
      $(document).on("click", ".toggleVisibilitybusy", function() {
    $('.busy').toggleClass('hide');
});
      $(document).on("click", ".toggleVisibilitycolors", function() {
    $('.rgb-col').toggleClass('hide');
});
 


$(document).scroll(function() {
  var z = $(this).scrollTop();
  if (z> 400 && z < 5000) {
    $("#time").fadeIn();
  }else {
    $("#time").fadeOut();
  }
});

$(document).scroll(function() {
  var v = $(this).scrollTop();
  if (v>5100 && v < 10000) {
    $("#timetwo").fadeIn();
  }else {
    $("#timetwo").fadeOut();
  }
});

$(document).scroll(function() {
  var y = $(this).scrollTop();
  if (y>10200 && y < 13800) {
    $("#timethree").fadeIn();
  }else {
    $("#timethree").fadeOut();
  }
});
$(document).scroll(function() {
  var x = $(this).scrollTop();
  if (x>13900 && x < 20000) {
    $("#timefore").fadeIn();
  }else {
    $("#timefore").fadeOut();
  }
});


function hidetimeline() {
  var x = document.getElementById("time");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}
function hidetimelinetwo() {
  var x = document.getElementById("timetwo");
  if (x.style.display === "block") {
    x.style.display = "none";
  } else {
    x.style.display = "block";
  }
}

 </script>
  </head>
 
<body>
    <header>

   <div class="sticky">
        
    <div id="theme-options-wrapper">
  
      <button class="theme-dot"><a href="#first">1995-2000</a></button>
       <button class="theme-dot"><a href="#second">2001-2009</a></button>
       <button class="theme-dot"><a href="#third">2010-2014</a></button>
       <button class="theme-dot"><a href="#forth">2015-2020</a></button>
      <button onclick="hidetimeline()"class="toggleVisibilitybusy theme-dot" id="theme-dot">minimal (1995)</button>
       <button  onclick="hidetimelinetwo()"class="toggleVisibilitybold theme-dot" id="theme-dot">bold col. (2001)</button>
       <button class="toggleVisibilitycolors theme-dot" id="theme-dot"> hide main col. (2010-20)</button>
        
      </div>
 
    
  </div>
</header> 
